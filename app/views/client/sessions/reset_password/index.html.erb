<div class="">
  <%= form_for "client", :url=> "/client/reset_password", :html => { :class => "form-horizontal"} do |f| %>

    <div class="control-group">
      <label class="control-label">原始密码:</label>
      <div class="controls">
        <%= f.password_field :password, :class => "input-large"%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">新密码:</label>
      <div class="controls">
        <%= f.password_field :new_password, :class => "input-large"%>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">新密码确认:</label>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => "input-large"%>
      </div>
    </div>        
    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定",:class => "btn" %>
      </div>
    </div>   
    
  <% end %>
</div>