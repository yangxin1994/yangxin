- content_for :head do
  = javascript_include_tag "pages/client/cities-bundle"
  = stylesheet_link_tag "pages/client/cities-bundle", :media => "all"
  :javascript
    // window.locations = "39.947648,116.360106-34.849875,113.749008-28.052591,108.036118"
    window.locations = "#{@location}"
    window.city_id = "#{@city.id.to_s}"
    window.record_index = "#{@record_index}"
    window.one_record = true

.container
  %h3
    %span= @city.name
    = link_to "返回", { controller: "client/cities", action: "records", id: @city.id }
  %p= "一共#{@city.records.length.to_s}条记录，正在设置第#{(@record_index.to_i + 1).to_s}条记录位置"
  %p 右键单击设置新位置
  #map.tab-pane