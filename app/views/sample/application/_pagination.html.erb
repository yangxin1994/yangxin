<% if common["total_page"] > 1 %>
<div class="pagination">
	<div>
		<% 
			extend_string = ""
			extend_string ="&per_page=#{params[:per_page]}" if params[:per_page]
			extend_string += "&status=#{params[:status]}" if params[:status]
			extend_string += "&reward_type=#{params[:reward_type]}" if params[:reward_type]
			extend_string += "&answer_status=#{params[:answer_status]}" if params[:answer_status]
		%>
		<a href="<%= path %>?page=<%= common["previous_page"] %><%= extend_string %>"><</a>
		<!-- ... -->
		<% if (common["current_page"]-2) > 1 %>
			<a onclick="return false;" href="#">...</a>
		<% end %>
		<!-- two before pages -->
		<% ((common["current_page"]-2)...common["current_page"]).select{|e| e > 0}.each do |e|	 %>
			<a href="<%= path %>?page=<%= e %><%= extend_string %>"><%= e %></a>
		<% end %>
		<!-- current page -->
		<a href="<%= path %>?page=<%= common["current_page"] %><%= extend_string %>" class="active"><%= common["current_page"] %></a>
		<!-- two after pages -->
		<% ((common["current_page"]+1)..(common["current_page"]+2)).select{|e| e <= common["total_page"]}.each do |e| %>
			<a href="<%= path %>?page=<%= e %><%= extend_string %>"><%= e %></a>
		<% end %>
		<!-- ... -->
		<% if (common["current_page"]+2) < common["total_page"] %>
			<a onclick="return false;" href="#">...</a>
		<% end %>
		<a href="<%= path %>?page=<%= common["next_page"] %><%= extend_string %>">></a>
	</div>
</div>
<% end %>