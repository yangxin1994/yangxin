<!-- content for head -->
<% content_for :head do %>
	<script type="text/javascript">
		window.total_page = <%= raw (!@orders.blank? ? @orders["total_page"] : 0) %>;
		window.orders = <%= raw @orders.to_json %>;//
		console.log(window.orders);//
	</script>
	<%= javascript_include_tag "pages/quillme/orders-bundle" %>
	<%= stylesheet_link_tag "pages/quillme/gifts-bundle", :media => "all" %>
<% end %>

<!-- content for main -->
<% content_for :left do %>
<div class="content-left-box pinkBorder">
	<h3 class="content-left-title whiteTxt f14 b pinkBg">我的礼品订单</h3>
	<span class="marked gift"></span>
		<ul class="img-list">
			<% if !@orders.blank? %>
			<% @orders["data"].each do |order| %>
			<li>
				<% order["gift"] ||= {} %>
				<% if !order["gift"]["photo_src"].blank? %>
					<% source = order["gift"]["photo_src"] %>
				<% else %>
					<% case order["gift"]["type"] %>
					<% when 0 %>
						<% source = "../assets/image/quillme/lotteries/cash.jpg" %>
					<% when 1 %>
						<% source = "../assets/image/quillme/lotteries/entity.jpg" %>
					<% when 2 %>
						<% source = "../assets/image/quillme/lotteries/virtual.jpg" %>
					<% when 3 %>
						<% source = "../assets/image/quillme/lotteries/lottery.jpg" %>
					<% end %>
				<% end %>
				<span class="img l ml20 mr20"><a href=<%= source %> ><img src=<%= source %> alt=""></a></span>
				<span class="w320 f14 b g3 l"><a href="javascript:void(0);"><%= order["gift"]["name"] %></a></span>
				<span class="w160 r tr g6"><b class="pinkTxt fg"><%= order["gift"]["point"] %></b>积分</span>
				<span class="w320 g3 b l mt10">订单号：<%= order["_id"] %></span>
				<span class="w160 g9 r tr">剩余<%= order["gift"]["surplus"] %>份</span>
				<span class="w160 pinkTxt b r tr">
					<% case order["status"] %>
					<% when 0 %>
						待审核
					<% when 1 %>
						待配送
					<% when -1 %>
						审核失败
					<% when 2 %>
						配送中
					<% when -2 %>
						已取消
					<% when 3 %>
						配送完成
					<% when -3 %>
						配送失败
					<% end %>
				</span>
				<span class="w320 g9 l tl mt10"><%= order["gift"]["updated_at"]%></span>
				<span class="w320 l mt10">
					<%= link_to '查看', order_path(order["_id"]), {:class => 'css-btn pink'} %>
				</span>
			</li>
			<% end %>
			<% end %>
		</ul>
		<div class="pagination">
			<a href="?page=<%= (@orders ? @orders["current_page"] : 1) - 1 %>" class="prev-gray"></a>
			<span class="current g9 f14"></span>
			<a href="?page=<%= (@orders ? @orders["current_page"] : 1) + 1 %>"  class="next-gray"></a>
		</div>
</div>
