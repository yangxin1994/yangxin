<!-- content for head -->
<% content_for :head do %>
	<script type="text/javascript">
		window.order = <%= raw @order.to_json %>;//
		console.log(window.order);//
		window._id = '<%= !@order.blank? ? @order["_id"] : "" %>';
	</script>
	<%= javascript_include_tag "pages/quillme/order-bundle" %>
	<%= stylesheet_link_tag "pages/quillme/gift-bundle", :media => "all" %>		
<% end %>

<!-- content for main -->
<% content_for :left do %>
<% if !@order.blank? %>
<% if @order["is_prize"] 
	link ="/lotteries/draws/" + @order["lottery_code_id"]
else
	link ="/gifts/" +  @order["gift"]["_id"]
end
%>
<% case @order["type"] %>
<% when 2 %> <!-- virtual -->
<div class="content-left-box pinkBorder">
	<h3 class="content-left-title whiteTxt f14 b pinkBg">查看礼品订单</h3>
	<div class='order'>
		<% if !@order["gift"]["photo_src"].blank? %>
		<p><img src=<%= @order["gift"]["photo_src"] %> /></p>
		<% end %>
		<p><em>订单号：</em><%= @order["_id"] %></p>
		<p><em>下单时间：</em><%= Time.iso8601(@order["updated_at"]).localtime.strftime("%Y.%m.%d %H:%M") %></p>
		<p><em>订单状态：</em>
			<% case @order["status"] %>
			<% when 0 %>
				待审核
			<% when 1 %>
				待配送
			<% when -1 %>
				审核失败
			<% when 2 %>
				配送中
			<% when -2 %>
				已取消
			<% when 3 %>
				配送完成
			<% when -3 %>
				配送失败
			<% end %>			
		</p>
		<% if @order['status'] == -1 %>
		<p><em>失败原因：<%= @order['status_desc'] %></em></p>
		<% end %>
		<p><em>订单礼品：</em><a href=<%= link %> ><%= @order["gift"]["name"] %></a></p>
		<p><em>您的姓名：</em><%= @order["full_name"] %></p>
		<p><em>手机号码：</em><%= @order["phone"] %></p>
		<div>
			<a class="css-btn pink r mr10" href='<%= orders_path %>'>返回订单列表</a>
			<% if @order["status"] == 0 %>
			<a class="css-btn pink r mr10" id="order-cancel" href="javascript:void(0);">取消订单</a>
			<% end %>
		</div>
	</div>
</div>
<% when 1 %> <!-- Entity -->
<div class="content-left-box pinkBorder">
	<h3 class="content-left-title whiteTxt f14 b pinkBg">查看礼品订单</h3>
	<div class='order'>
		<% if !@order["gift"]["photo_src"].blank? %>
		<p><img src=<%= @order["gift"]["photo_src"] %> /></p>
		<% end %>
		<p><em>订单号：</em><%= @order["_id"] %></p>
