		<p><em>订单状态：</em>
			<% case @order["status"] %>
			<% when 0 %>
				待审核
			<% when 1 %>
				待配送
			<% when -1 %>
				审核失败
			<% when 2 %>
				配送中
			<% when -2 %>
				已取消
			<% when 3 %>
				配送完成
			<% when -3 %>
				配送失败
			<% end %>			
		</p>
		<% if @order['status'] == -1 %>
		<p><em>失败原因：<%= @order['status_desc'] %></em></p>
		<% end %>
		<p><em>订单礼品：</em><a href=<%= link %> ><%= @order["gift"]["name"] %></a></p>
		<p><em>您的姓名：</em><%= @order["full_name"] %></p>
		<p><em>手机号码：</em><%= @order["phone"] %></p>
		<p><em>寄送地址：</em><%= @order["address"] %></p>
		<p><em>邮政编码：</em><%= @order["postcode"] %></p>
		<div>
			<a class="css-btn pink r mr10" href='<%= orders_path %>'>返回订单列表</a>
			<% if @order["status"] == 0 %>
			<a class="css-btn pink r mr10" id="order-cancel" href="javascript:void(0);">取消订单</a>
			<% end %>
		</div>
	</div>		
</div>
<% when 0 %> <!-- Cash -->
<div class="content-left-box pinkBorder">
	<h3 class="content-left-title whiteTxt f14 b pinkBg">查看礼品订单</h3>
	<div class='order'>
		<% if !@order["gift"]["photo_src"].blank? %>
		<p><img src=<%= @order["gift"]["photo_src"] %> /></p>
		<% end %>
		<p><em>订单号：</em><%= @order["_id"] %></p>
