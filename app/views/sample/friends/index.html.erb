<!-- content for head -->
<% content_for :head do %>
	<script type="text/javascript">
		window.total_page = <%= raw (@friends && !@friends["total_page"].blank? ? @friends["total_page"] : 0) %>;
		window.friends = <%= raw @friends.to_json %>;
		console.log(window.total_page);
		console.log(window.friends);
	</script>
	<%= javascript_include_tag "pages/quillme/friends-bundle" %>
	<%= stylesheet_link_tag "pages/quillme/friends-bundle", :media => "all" %>
<% end %>

<!-- content for main -->
<% content_for :left do %>
<div class="content-left-box purpleBorder">
	<h3 class="content-left-title whiteTxt f14 b purpleBg">我的好友</h3>
	<div class="content">
		<div class="share-panel dib">
			<p style='font-size: 12px; line-hight: 2em; color: #666;'>将下面链接分享给好友，邀请好友加入 OopsData 调研社区，每成功邀请一位好友，您将获得<em style='margin: 0 5px; color: #B37DC9; font-size: 20px; font-weight: bold;'>10</em>积分的奖励。</p>
			<p style="font-size: 12px; font-weight: bold; line-hight: 2em; color: #666; padding: 10px 0 20px 0;">我们将对新注册的用户进行电话复核，若发现虚假用户等作弊现象，介绍人所获积分奖励将被扣除，并且介绍人将被列入黑名单。</p>
			<input type="text" name="link-address" id="link-address"  value='<%= "#{request.protocol}#{request.host_with_port}#{signup_path({i: user_id})}" %>' style='color:#666;' />
			<a class="od-button od-button-purple ml10 copyLink" href="javascript:void(0);">复制推荐链接</a>
			<ul>
				<li><a href="javascript:void(0);" class="gmail-share" title="GMail"><img src="../assets/social/gmail-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="douban-share" title="豆瓣"><img src="../assets/social/douban-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="renren-share" title="人人"><img src="../assets/social/renren-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="diandian-share" title="点点"><img src="../assets/social/diandian-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="sina-share" title="新浪微博"><img src="../assets/social/sina-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="fetion-share" title="飞信"><img src="../assets/social/fetion-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="kaixin-share" title="开心网"><img src="../assets/social/kaixin-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="qzone-share" title="QQ空间"><img src="../assets/social/qzone-01.png" /></a></li>
				<li><a href="javascript:void(0);" class="tencent-share" title="腾讯微博"><img src="../assets/social/tencent-01.png" /></a></li>
			</ul>		
		</div>
	</div>		
	<table>
		<tr>
			<th class="w300 b g3 pl20">好友列表</th>
			<th class="tr b pr20">注册时间</th>
		</tr>		
		<% if !@friends.nil? %>
		<% @friends["data"].each do |friend| %>
			<tr>
				<td class="w300 f14 g3 pl20"><%= friend["email"] %></td>
				<td class="g9 tr pr20"><%= Time.at(friend["registered_at"]).localtime.strftime("%Y.%m.%d") %></td>
			</tr>
		<% end %>
		<% end %>
	</table>
	<div class="pagination">
		<a href="?page=<%= (!@friends.blank? ? @friends["current_page"] : 1) - 1 %>" class="prev-gray"></a>
		<span class="current g9 f14"></span>
		<a href="?page=<%= (!@friends.blank? ? @friends["current_page"] : 1) + 1 %>"  class="next-gray"></a>
	</div>		
</div>
<% end %>

