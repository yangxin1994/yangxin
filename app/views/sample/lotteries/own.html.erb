<!-- page params -->
<%
f = @folded_lotteries ? @folded_lotteries["current_page"] : 1
d = @drawn_lotteries ? @drawn_lotteries["current_page"] : 1
p = @past_lotteries ? @past_lotteries["current_page"] : 1
%>

<!-- content for head -->
<% content_for :head do %>
	<script type="text/javascript">
		window.folded_total = <%= raw @folded_lotteries ? @folded_lotteries["total_page"] : 0 %>;
		window.drawn_total = <%= raw @drawn_lotteries ? @drawn_lotteries["total_page"] : 0 %>;
		window.past_total = <%= raw @past_lotteries ? @past_lotteries["total_page"] : 0 %>;

		window.lottery_codes = <%=raw @lottery_codes.to_json %>;
		console.log(window.lottery_codes);
		window.folded_lotteries = <%= raw @folded_lotteries.to_json %>;
		console.log(window.folded_lotteries);
		window.drawn_lotteries = <%= raw @drawn_lotteries.to_json %>;
		console.log(window.drawn_lotteries);
		window.past_lotteries = <%= raw @past_lotteries.to_json %>;
		console.log(window.past_lotteries);		
	</script>
	<%= javascript_include_tag "pages/quillme/lotteries_own-bundle" %>
	<%= stylesheet_link_tag "pages/quillme/lotteries-bundle", :media => "all" %>
<% end %>

<!-- content for main -->
<% content_for :left do %>
<div class="content-left-box orangeBorder" id="folded_lotteries">
	<h3 class="content-left-title whiteTxt f14 b orangeBg">我参与的抽奖活动</h3>
	<span class="marked integral"></span>
		<ul class="img-list">
			<% if !@folded_lotteries.nil? %>
			<% @folded_lotteries["data"].each do |folded_lottery| %>
			<% if folded_lottery["status"] == 0 %>
				<li>
					<span class="img l ml20 mr20"><a href=<%= folded_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> ><img src=<%= folded_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> alt=""></a></span>
					<span class="w320 f14 b g3 l"><a href="javascript:void(0);"><%= folded_lottery["for_lottery"]["title"] %></a></span>
					<span class="w160 orangeTxt b r tr">抽奖号码</span>
					<% fd = folded_lottery["for_lottery"]["description"] %>
					<span class="txt w320 g9 l mt10"><%= fd.length > 50 ? fd[0..49] + "..." : fd  %></span>	
					<span class="w160 g9 r tr"><%= folded_lottery["_id"] %></span>
					<span class="w160 g3 r tr"><%= "参与时间：" + Time.iso8601(folded_lottery["created_at"]).localtime.strftime("%Y.%m.%d %H:%M") unless folded_lottery["created_at"].nil? %></span>
					<span class="w160 g3 r tr">抽奖状态：
						<% if folded_lottery["for_lottery"]["status"] > 1 %>
							正在开奖
						<% else %>
							尚未开始抽奖，请耐心等待。
						<% end %>
					</span>
					<% draws = "/lotteries/draws/" + folded_lottery["_id"] %>
					<% if folded_lottery["for_lottery"]["status"] > 1 %>
					<span class="w320 l mt10"><a class="css-btn orange" href=<%= draws %> >抽奖</a></span>
					<% end %>
				</li>
			<% end %>
			<% end %>
			<% end %>
		</ul>


		<div class="pagination">
			<a href='?f=<%= f - 1 %>&d=<%= d %>&p=<%= p %>' class="prev-gray"></a>
			<span class="current g9 f14"></span>
			<a href='?f=<%= f + 1 %>&d=<%= d %>&p=<%= p %>'  class="next-gray"></a>
		</div>
</div>

<div class="content-left-box grayBorder" id="drawn_lotteries">
	<h3 class="content-left-title whiteTxt f14 b grayBg">我抽中的奖品</h3>
	<span class="marked integral"></span>
		<ul class="img-list">
			<% if !@drawn_lotteries.nil? %>
			<% @drawn_lotteries["data"].each do |drawn_lottery| %>
			<% if drawn_lottery["status"] == 2 || drawn_lottery["status"] == 4 %>
				<li>
					<span class="img l ml20 mr20"><a href=<%= drawn_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> ><img src=<%= drawn_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> alt=""></a></span>
					<span class="w320 f14 b g3 l"><a href="javascript:void(0);"><%= drawn_lottery["for_lottery"]["title"] %></a></span>
					<span class="w160 orangeTxt b r tr">奖品：<%= drawn_lottery["prize_name"] %></span>
					<% if drawn_lottery["status"] == 2 %>
						<span class="w320 b r tr"><a class="css-btn" href=<%= "/lotteries/draws/" + drawn_lottery["_id"] %> style="color: red;">兑换</a></span>
					<% else %>
						<span class="w320 b r tr"><a class="css-btn" href=<%= "/orders/" + drawn_lottery["order_id"] %> >查看订单</a></span>
					<% end %>
					<span class="txt w320 g9 l mt10">中奖号码：<%= drawn_lottery["_id"] %></span>
					<span class="w160 g9 r tr"><%= drawn_lottery["status"] == 2 ? "未下订单" : "已下订单" %></span>
					<span class="w160 g3 r tr"><%= "抽奖时间：" + Time.iso8601(drawn_lottery["drawed_at"]).localtime.strftime("%Y.%m.%d %H:%M") unless drawn_lottery["drawed_at"].nil? %></span>
				</li>
			<% end %>			
			<% end %>
			<% end %>
		</ul>


		<div class="pagination">
			<a href='?f=<%= f %>&d=<%= d - 1 %>&p=<%= p %>' class="prev-gray"></a>
			<span class="current g9 f14"></span>
			<a href='?f=<%= f %>&d=<%= d + 1 %>&p=<%= p %>'  class="next-gray"></a>
		</div>
</div>


<div class="content-left-box grayBorder" id="past_lotteries">
	<h3 class="content-left-title whiteTxt f14 b grayBg">未抽中的抽奖号</h3>
	<span class="marked integral"></span>
		<ul class="img-list">
			<% if !@past_lotteries.nil? %>
			<% @past_lotteries["data"].each do |past_lottery| %>
			<% if past_lottery["status"] == 1 %>
				<li>
					<span class="img l ml20 mr20"><a href=<%= past_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> ><img src=<%= past_lottery["for_lottery"]["photo_src"] || "../assets/image/quillme/lotteries/lottery.png" %> alt=""></a></span>
					<span class="w320 f14 b g3 l"><a href="javascript:void(0);"><%= past_lottery["for_lottery"]["title"] %></a></span>
					<span class="txt w320 g9 l mt10">抽奖号码：<%= past_lottery["_id"] %></span>
					<span class="w160 g9 r tr">没有抽中</span>
					<span class="w160 g3 r tr"><%= "抽奖日期：" + Time.iso8601(past_lottery["drawed_at"]).localtime.strftime("%Y.%m.%d") unless past_lottery["drawed_at"].nil?  %></span>
				</li>
			<% end %>			
			<% end %>
			<% end %>
		</ul>


		<div class="pagination">
			<a href='?f=<%= f %>&d=<%= d %>&p=<%= p - 1 %>' class="prev-gray"></a>
			<span class="current g9 f14"></span>
			<a href='?f=<%= f %>&d=<%= d %>&p=<%= p + 1 %>'  class="next-gray"></a>
		</div>
</div>

<% end %>

<!-- content for right -->
<% content_for :right do %>
<div class="sidebar-box img-orangeBg">
	<h3 class="sidebar-title f14 b g3">抽奖规则</h3>
	<ul>
		<li>每个抽奖活动有固定的开奖时间，开奖期间您可以使用抽奖号进行抽奖</li>
		<li>一个抽奖号为一次抽奖机会</li>
		<li>中奖的用户请在中奖后提交您的配送信息，以便我们配送奖品</li>
	</ul>
	<h3 class="sidebar-title f14 b g3 mt10">抽奖流程</h3>
	<ul>
		<li>参加问卷调查或者通过积分兑换抽奖号</li>
		<li>等待抽奖活动开奖</li>
		<li>开奖期间，点击抽奖号进行抽奖</li>
		<li>中奖之后填写配送信息</li>
		<li>管理员审核通过后，配送礼品</li>
	</ul>
</div>
<% end %>
