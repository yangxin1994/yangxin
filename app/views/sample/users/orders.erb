                                  <a class="fancybox" name="<%= order["_id"] %>" href="#order-qb-detail">订单详情</a>
                              </td>
                            <% when Order::REAL, Order::VIRTUAL %>
                              <!-- 礼品 -->
                              <td>
                                  <img src="<%= small_gift_image(order['picture_url']) %>" style="width: 36px; height: 36px;"/>
                                  <a target="_blank" href="/gifts/<%= order["gift_id"] %>"><%= truncate(order["title"].to_s.strip, length: 22) %></a>
                              </td>
                              <td><%= order["point"] %>积分</td>
                              <td>
                                 <span><%= order_status(order["status"].to_i) %></span>
                              </td>
                              <td>
                                  <a class="fancybox" name="<%= order["_id"] %>" href="#order-gift-detail">订单详情</a>
                              </td>
                            <% else %>
                              <td></td>
                              <td></td>
                              <td></td>
                              <td></td>
                            <% end %>
                        </tr>
                      <% end %>
                  </tbody>
              </table>
          <% end %>
        </div>

        <%= render "pagination", :@common_value => @orders, :@path => "/users/orders" %>    
    </div>

    <!-- user tabs -->
    <%= render "right_partial" %>
</div>

