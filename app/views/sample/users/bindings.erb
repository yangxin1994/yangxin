<% content_for :head do %>
  <%= stylesheet_link_tag "pages/sample/users-bundle", :media => "all" %>
  <%= javascript_include_tag "pages/sample/users-bundle", "pages/sample/users_bindings-bundle", :media => "all" %>
<% end %>

<%= render "sample_nav", :@path => 'setting', :@text => "用户设置" %>

<div class="inner-page main-content">
    <!-- main -->
    <div class="part-left">
        <div class="setting tabs">
            <div class="l">
                <a href="/users/setting" class="tab <%= 'active' if action_name == 'basic_info' %>" id="tab-edit-info">个人资料</a>
                <a href="/users/setting/avatar" class="tab <%= 'active' if action_name == 'avatar' %>" id="tab--edit-avatar">修改头像</a>
                <a href="/users/setting/bindings" class="tab <%= 'active' if action_name == 'bindings' %>" id="tab-edit-bindings">帐户绑定</a>
                <a href="/users/setting/address" class="tab <%= 'active' if action_name == 'address' %>" id="tab-edit-address">收货地址</a>
                <a href="/users/setting/password" class="tab <%= 'active' if action_name == 'password' %>" id="tab-edit-password">修改密码</a>
            </div>
            <div style="clear:both;"></div>
            <div class="nav2-dashed-line"></div>
        </div>

        <div style="clear:both;"></div>

        <table id="bindings">
            <tr class="tr">
                <!-- mobile -->
                <% if @bindings["mobile"] %>
                  <!-- binded -->
                  <td class="icons">
                    <i class="icon-binding icon-mobile active"></i>
                    <span>激活手机</span>
                  </td>
                  <td class="content">
                    <p>您已绑定手机：<span class="active-text"><%= @bindings["mobile"][0] %></span></p>
                      
                    <p>
                      <input class="subscribe" name="mobile" type="checkbox" <%= 'checked' if @bindings["mobile"][1] %>/>
                      <span>有新问卷时提醒我</span>
                    </p>
                  </td>
                  <td class="bind change">
                      <a class="fancybox" href="#phone-binding">更改</a>
                  </td>
                <% else %>
                  <!-- unbind -->
                  <td class="icons">
                    <i class="icon-binding icon-mobile"></i>
                    <span>激活手机</span>
                  </td>
                  <td class="content">
                    <p>您尚未绑定手机</p>
                  </td>
                  <td class="bind">
                      <a class="fancybox" href="#phone-binding">绑定</a>
                  </td>
                <% end %>
            </tr>

            <tr class="tr">
              <!-- email -->
              <% if @bindings["email"] %>
                <td class="icons">
                    <i class="icon-binding icon-email active"></i>
                    <span>激活邮箱</span>
                </td>
                <td class="content">
                    <p>您已绑定邮箱：<span class="active-text"><%= @bindings["email"][0] %></span></p>
                    <p>
                        <input type="checkbox" class="subscribe" name="email"  <%= 'checked' if @bindings["email"][1] %>/>
                        <span>有新问卷时提醒我</span>
                    </p>
                </td>
                <td class="bind change">
                    <a class="fancybox" href="#email-binding">更改</a>
                </td>
              <% else %>
                <td class="icons">
                    <i class="icon-binding icon-email"></i>
                    <span>激活邮箱</span>
                </td>
                <td class="content">
                    <p>您尚未绑定邮箱</p>
                </td>
                <td class="bind">
                    <a class="fancybox" href="#email-binding">绑定</a>
                </td>
              <% end %>
            </tr>

            <tr class="tr">
              <!-- sina weibo -->
              <% if @bindings["sina"] %>
                <td class="icons">
                    <i class="icon-binding icon-sina active"></i>
                    <span>新浪微博</span>
                </td>
                <td class="content">
                    <p>您已绑定新浪微博：<span class="active-text"><%= @bindings["sina"][0] %></span></p>
                    <p>
                        <input type="checkbox" class="share" name="sina"  <%= 'checked' if @bindings["sina"][1] %>/>
                        <span>有新问卷时提醒我</span>
                    </p>
                </td>
                <td class="bind change">
                    <a  href="<%= social_auth_link('sina')%>">更改</a>
                </td>
              <% else %>
