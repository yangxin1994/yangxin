                    <div class="select day td1">
                        <div class="select-content"> <!-- 点击后请用js 加上 .active -->
                            <span class="select-txt" name="-1">请选择..</span>
                            <i class="triangle"></i>
                        </div>  
                        <ul class="w100">
                            <!-- 最后一个li的class bbr -->
                        </ul>
                    </div>
                </div>
                <div class="th pcas" id="born_address">
                    <input id="born_address_value" style="display: none;" type="text" value="<%= @user_info["born_address"].nil? ? -1 :  @user_info["born_address"] %>"/>
                    <div class="title" style="position:relative; top: 3px\9;" >出生地：</div>
                    <div class="select provice td1">
                        <div class="select-content"> <!-- 点击后请用js 加上 .active -->
