<% content_for :sidenav do %>
  <li>
    <a href="/admin/surveys">
    <i class="icon-chevron-right"></i>
    调研列表
    </a>
  </li>
  <li>
    <a href="/admin/surveys/<%= params[:id]%>/questions">
      <i class="icon-chevron-right"></i>
      问卷查看
    </a>
  </li>
  <li>
    <a href="/admin/surveys/<%= params[:id]%>/reward_schemes">
      <i class="icon-chevron-right"></i>
      奖励方案
    </a>
  </li>
  <li>
    <a href="/admin/surveys/<%= params[:id]%>/promote">
      <i class="icon-chevron-right"></i>
      推送渠道
    </a>
  </li>
  <li class="active">
    <a href="/admin/surveys/<%= params[:id]%>/interviewer_task">
      <i class="icon-chevron-right"></i>
      访问员设置
    </a>
  </li>    
<% end %>

<div class="well">
  <a href="/admin/surveys/<%= params[:id]%>"><%= @survey.title %></a>
</div>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th >创建时间</th>
        <th >状态</th>
        <th >访问员姓名</th>
        <th >完成量</th>
        <th >提交量</th>
        <th >拒绝量</th>
       <!--{"rules"=>[{"amount"=>3, "finished_count"=>0, "submitted_count"=>0}]} -->
      </tr>
    </thead>
    <tfoot>
      <tr></tr>
    </tfoot>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.created_at %></td>
        <td><%= survey.user.try(:email) || survey.user.try(:mobile) %></td>
        <td><%= Time.at(survey.created_at).strftime('%F %R') %></td>
        <td data-sid="<%= survey._id %>">
        <div class="btn-group">
          <a class="btn handle" href="/admin/surveys/<%= survey._id %>" target="_blank"><i class="icon-list-alt"></i>查看问卷</a>
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="#info" class="info"><i class="icon-wrench"></i>问卷基本设置</a></li>
            <li><a href="/admin/surveys/<%= survey._id %>/reward_schemes" ><i class="icon-wrench"></i>奖励方案设置</a></li>
            <li><a href="/admin/surveys/<%= survey._id %>/promote" ><i class="icon-share"></i>推送渠道设置</a></li>
          </ul>
        </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>