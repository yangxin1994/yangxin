<div class="well">
  <a href="/admin/surveys/<%= params[:id]%>"><%= @survey.title %></a>
</div>
<div>
  <a href="/admin/surveys/<%= params[:id]%>/new_supervisor" class="btn btn-primary pull-right">新增监督员
  </a>
</div>
<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th >昵称</th>
        <th >邮箱</th>
      </tr>
    </thead>
    <tfoot>
      <tr></tr>
    </tfoot>
    <tbody>
      <% @supervisors['data'].each do |supervisor| %>
      <tr data="<%= supervisor.id%>">
        <td><%= supervisor.user.nickname %></td>
        <td><%= supervisor.user.email %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div>
  <span class="pull-right">
    <%= paginator_mini @supervisors %>
  </span>  
</div>