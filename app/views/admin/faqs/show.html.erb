<%if @faq.success %>

<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/faqs-bundle" %>
	<%= stylesheet_link_tag "pages/admin/faqs-bundle", :media => "all" %>
<% end %>

<div id="edit-tab">
	<div class="title">
		<h5>FAQ管理: 查看<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/faqs">返回FAQ列表</a><h5>
	</div>

	<form action="#" method="post">					
		<fieldset>
			<p>
				<label>问题</label>
				<input class="wrap-text" type="text" name="question" value="<%= @faq.value["question"] %>"/>
			</p>
			<p>
				<label style="vertical-align:top">回答</label>
				<textarea class="wrap-text" name="answer" style="width:600px; min-height: 100px;"><%= @faq.value["answer"] %></textarea>
			</p>
			<p>
				<input class="blueBtn btn-edit-ok" type="button" value="确 定" />
			</p>					
		</fieldset>
						
	</form>	

	<hr/>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @faq.value %></p>
</div>
<%end%>	