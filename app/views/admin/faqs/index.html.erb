<%if @faqs.success %>

<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/faqs-bundle" %>
	<%= stylesheet_link_tag "pages/admin/faqs-bundle", :media => "all" %>
<% end %>

<!-- put html code below -->

<div class="faqs"> 
<div id="list-tab">
	<div class="title">
		<h5>FAQ管理<h5>
	</div>

	<div class="table">
		<div class="head">
			<h5 class="iFrames">
				列表
			</h5>
			<a class="new" href="/admin/faqs/new">新建FAQ</a>
		</div>
		
		<table cellspacing="0" cellpadding="0" border="0" id="example" class="display">
			<thead>
				<tr>
					<th class="" rowspan="1" colspan="1" style="width: 10px;">
						<input class="check-all" type="checkbox" />
					</th>
					<th>常见问题标题</th>
					<th>提交人</th>
					<th class="time">提交时间</th>
					<th rowspan="1" colspan="1" style="width: 60px;"></th>
				</tr>
			</thead>
				
			<tbody>
				<% @faqs.value["data"].to_a.each do |faq|%>
					<tr id="<%= faq['_id']%>">
						<td><input type="checkbox" /></td>
						<td>                           
							<a href="/admin/faqs/<%= faq['_id']%>" class="show" title="点击查看详细">
								<%= truncate(faq["question"], :length => 24, :omission => "...") %></a>
						</td>
						<td class="user_id" name="<%= faq["user_id"] %>"><%= faq["user_id"] %></td>
						<td class="time"><%= faq["created_at"][0,16].gsub(/[T]/, ' ') %></td>
						<td>
							<!-- Icons -->
							 <a href="#" class="edit" title="编辑"><img src="../../assets/od-icon/pencil.png" alt="编辑" /></a>
							 <a href="#" class="delete" title="删除"><img src="../../assets/od-icon/cross.png" alt="删除" /></a> 
						</td>
					</tr>
				<%- end %>
			</tbody>
			
			<tfoot>
				<tr>
					<td colspan="6">
						<div class="delete-selected-panel">
							<input type="button" class="blueBtn delete-selected" value="批量删除"/>
						</div>

						<%= paginator_tag @faqs.value %>
					</td>
				</tr>
			</tfoot>			
		</table>

	</div>
</div>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @faqs.value %></p>
</div>
<%end%>	