<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/faqs-bundle" %>
	<%= stylesheet_link_tag "pages/admin/faqs-bundle", :media => "all" %>
<% end %>

<div id="new-tab">
	<div class="title">
		<h5>FAQ管理: 新建<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/faqs">返回FAQ列表</a><h5>
	</div>

	<form action="#" method="post">					
		<fieldset>
			<p>
				<label>问题</label>
				<input class="text-input small-input" type="text" name="question" /> 
			</p>
			<p>
				<label style="vertical-align:top">回答</label>
				<textarea class="text-input textarea" name="answer"  style="width:600px; min-height: 100px;"></textarea> 
			</p>
			<p>
				<input class="blueBtn btn-new-ok" type="button" value="确 定" />
			</p>					
		</fieldset>
		
		<div class="clear"></div><!-- 清除浮动 -->					
	</form>	
</div>