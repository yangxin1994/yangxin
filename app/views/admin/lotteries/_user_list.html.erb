  <table id="<%= @lottery["_id"] %>" cellpadding="0" cellspacing="0" width="100%" class="table-prizes tableStatic lottery-ctrl">
    <thead>
      <tr>
        <td width="20%">用户名</td>
        <td width="20%">姓名</td>        
        <td width="20%">Email</td>        
        <td width="35">选择奖品</td>
        <td width="10%">操作</td>
      </tr>
    </thead>
    <tbody>
      <% @users["data"].each do |user| %>
      <tr id='<%= user["_id"] %>'>
        <td><%= user["username"] %></td>
        <td><%= user["full_name"] %></td>
        <td><%= user["email"] %></td>
        <td><%= prizes_tag(@prizes) %></td>
        <td><a href="<%= user["_id"] %>" class="btn-assign">确定</a></td>
      </tr>
      <% end if params[:email] || params[:full_name] || params[:username] %>
    </tbody>
    <tfoot>
      <tr>
        <td>
          通过email,用户名搜索
        </td>
        <td colspan="2">
          <select name="search" id="select-user">
            <option value="email">邮箱</option> 
            <option value="full_name">姓名</option>
            <option value="username">用户名</option>
          </select>
            <input type="text" id="text-keyword" style="width:50%" />
          </div>
        </td>
        <td>
          <input type="button" id="btn-search_user" value="搜索"/>
        </td>
      </tr>
      <tr>
        <td colspan="4"><%= paginator_tag_ajax @users %></td>
      </tr>
      <tr>
        <td colspan="4">&nbsp;</td>
      </tr>
    </tfoot>
  </table>