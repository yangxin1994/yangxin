
      <table cellpadding="0" cellspacing="0" width="100%" class="tableStatic">
        <thead>
          <tr>
            <td width="30%">活动名称</td>
            <td width="40%">日期</td>
            <td width="15%">显示在 Quillme</td>
            <td width="15%">开启抽奖</td>
          </tr>
        </thead>
        <tbody>
          <% @lotteries["data"].each_with_index do |lottery, i| %>
          <tr id="<%= lottery["_id"]%>">
            <td>
              <a href="lotteries/<%= lottery["_id"]%>" rel="modal" title="title"><%= lottery["title"] %></a>
            </td>
            <td><%= lottery["created_at"] %></td>
            <td>
              <input type="checkbox" id="ck_display_<%= lottery["_id"]%>" class="ck_display ck_status" name="chbox" <%= ck_display_tag lottery %>>
            </td>
            <td>
              <input type="checkbox" id="ck_public_<%= lottery["_id"]%>" class=" ck_status" name="chbox" <%= ck_public_tag lottery %>>
            </td>
          </tr>
          <% end -%>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="6"><%= paginator_tag_ajax @lotteries %></td>
          </tr>
          <tr>
            <td colspan="6">&nbsp;</td>
          </tr>
        </tfoot>
      </table>
