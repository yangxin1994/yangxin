<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/template_questions-bundle" %>
	<%= stylesheet_link_tag "pages/admin/template_questions-bundle", :media => "all" %>
<% end %>

<!--  -->
<%
	question_types=["选择题", "矩阵选择题", "文本填充题", "数值填充题", "邮箱题",
		"网址链接题", "电话题", "时间题", "地址题", "组合填充题", 
		"MATRIX_BLANK_QUESTION", "比重题", "排序题", "RANK_QUESTION", "文本段",
		"FILE_QUESTION", "TABLE_QUESTION", "量表题"]
%>

<!-- put html code below -->
<% if @template_questions.success %>
<div class="template_questions"> 
<div id="list-tab">
	<div class="title">
		<h5>模板题管理<h5>
	</div>

	<div class="table">
		<div class="head">
			<h5 class="iFrames">
				列表
			</h5>
			<select name="template_question_types" style="margin:10px;">
				<option <% if params[:question_type].nil? %>selected<%end%> value="999">全部</option>
				<% question_types.each_with_index do |item, index|%>
					<option <% if params[:question_type] && params[:question_type].to_i == index %>selected<%end%> value="<%=index%>">
						<%= item %>
					</option>
				<%end%>
			</select>
			<a class="new" href="/admin/template_questions/new">新建模板题</a>
		</div>

		<table cellspacing="0" cellpadding="0" border="0" id="example" class="display">
			<thead>
				<tr>
					<th class="" rowspan="1" colspan="1" style="width: 10px;">
						<input class="check-all" type="checkbox" />
					</th>
					<th>问题标题</th>
						<th>问题类型</th>
						<th>创建时间</th>
					<th rowspan="1" colspan="1" style="width: 60px;"></th>
				</tr>
			</thead>			 
						
			<tbody>
				<% @template_questions.value["data"].to_a.each do |template_question|%>
					<tr id="<%= template_question['_id']%>">
						<td><input type="checkbox" /></td>
							<td>                           
													<a href="/admin/template_questions/<%= template_question['_id']%>" class="show" title="点击查看详细">
														<%= template_question["content"]["text"] %></a>
												</td>
						<td><%= question_types[template_question["question_type"].to_i] %></td>
						<td><%= template_question["created_at"][0,16].gsub(/[T]/, ' ') %></td>
						<td>
							<!-- Icons -->
							<!-- <a href="#" class="add_to_car" title="添加到样本问卷"><img src="../../assets/od-icon/pencil.png" alt="添加到样本问卷" /></a> -->
							 <a href="/admin/template_questions/<%= template_question['_id']%>" class="show" title="编辑"><img src="../../assets/od-icon/pencil.png" alt="编辑" /></a>
							 <a href="#" class="delete" title="删除"><img src="../../assets/od-icon/cross.png" alt="删除" /></a> 
						</td>
					</tr>
				<%- end %>
				
			</tbody>			
			<!-- page and delete-all -->
			<tfoot>
				<tr>
					<td colspan="6">
						<div class="delete-selected-panel">
							<input type="button" class="blueBtn delete-selected" value="批量删除"/>
						</div>

						<%= paginator_tag @template_questions.value %>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @template_questions.value %></p>
</div>
<%end%>	