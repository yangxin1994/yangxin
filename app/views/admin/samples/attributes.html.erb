<% content_for :head do %>
  <%= javascript_include_tag "pages/admin/samples/attributes-bundle" %>
<% end %>

<% content_for :sidenav do %>

  <li>
    <a href="/admin">
    <i class="icon-chevron-right"></i>
    样本列表
    </a>
  </li>
  <li class="active">
    <a href="/admin/samples/attributes">
    <i class="icon-chevron-right"></i>
    样本属性
    </a>
  </li>
  <li>
    <a href="/admin/samples/status">
      <i class="icon-chevron-right"></i>
      样本数据统计
    </a>
  </li>
<% end %>

<div>
  <span>
    <form class="form-search" style="display:inline">
    <div class="input-append">
      <input class="span6 search-query" name="keyword" id="" type="text" placeholder="邮箱或者电话">
      <button class="btn">搜索</button>
    </div>
    </form>
  </span>
  <a href="/admin/samples/new_attributes" class="btn">新建样本属性</a>
  <span class="pull-right">
    <%= paginator_mini @attributes %>
    <div class="btn-group">
      <button class="btn dropdown-toggle" data-toggle="dropdown"><i class="icon-filter"></i>&nbsp;<span class="caret"></span></button>
      <ul class="dropdown-menu pull-right">
        <li><a href="?type=<%= params["type"] %>">全部</a></li>
        <li class="divider"></li>
        <li><a href="#type-0">字符串</a></li>
        <li><a href="#type-1">枚举</a></li>
        <li><a href="#type-2">数值</a></li>
        <li><a href="#type-3">日期</a></li>
        <li><a href="#type-4">数值范围</a></li>
        <li><a href="#type-5">日期范围</a></li>
        <li><a href="#type-6">地址</a></li>
        <li><a href="#type-7">数组</a></li>
      </ul>
    </div>
  </span>
</div>

<div>
<table class="table table-striped">
  <thead>
    <tr>
      <td>属性名称</td>
      <td>类型</td>
      <td width="15%">操作</td>
    </tr>
  </thead>
  <tbody>
    <% @attributes["data"].each_with_index do |attribute, i| %>
    <tr>
      <td><%= attribute['name'] %></td>
      <td><%= attr_type_tag attribute['type'] %></td>
      <td>
        <div class="btn-group">
          <a class="btn handle" href="<%= attribute['_id'] %>/edit_attributes" >编辑</a>
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="#delete-<%= attribute['_id'] %>" class="delete-btn">删除</a></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end -%>
  </tbody>

</table>

</div>



