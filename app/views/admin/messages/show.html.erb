<%if @message.success %>

<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/messages-bundle" %>
	<%= stylesheet_link_tag "pages/admin/messages-bundle", :media => "all" %>
<% end %>

<div id="edit-tab">
	<div class="title">
		<h5>消息管理: 查看<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/messages">返回消息列表</a><h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/messages/new">创建消息</a><h5>
	</div>

	<form action="#">					
		<fieldset>
			<p>
				<label>消息标题</label>
				<input class="wrap-text" type="text" name="message[:title]" value="<%= @message.value["title"] %>"/>
			</p>
			<p>
				<label>接收人</label>
				<%
					receiver_emails=""
					@message.value['receiver_emails'].each{|e| receiver_emails+=","+e}
					receiver_emails=receiver_emails[1,receiver_emails.length] if receiver_emails.length > 1
				%>
				<input title="为了保证统一性,不可更新接收人邮箱!" class="text-input small-input" type="text" id="txt-receiver" disabled name="message[:receiver]" value="<%= receiver_emails %>"/> 
				<span class="input-notification error dn png_bg">请输入正确的邮箱地址！</span> 
			</p>
			<p>
				<label style="vertical-align:top">消息内容</label>
				<textarea class="wrap-text" name="message[:content]" style="width:600px; min-height: 100px;"><%= @message.value["content"] %></textarea>
			</p>
			<p>
				<input class="blueBtn btn-edit-ok" type="button" value="确 定" />
				<%if @message.value["created_at"] != @message.value["updated_at"]%>
					<span class="f-red">(此消息被修改过)</span>
				<%end%>
			</p>					
		</fieldset>
						
	</form>	

	<hr/>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @message.value %></p>
</div>
<%end%>	