<!-- content for head -->
<% content_for :head do %>
  <%= javascript_include_tag "pages/admin/prizes/form-bundle" %>
<% end %>
<% content_for :sidenav do %>
  <li class="active">
    <a href="/admin/prizes">
    <i class="icon-chevron-right"></i>
    奖品列表
    </a>
  </li>
  <li>
    <a href="/admin/prizes/new">
      <i class="icon-chevron-right"></i>
      新建奖品
    </a>
  </li>
<% end %>

<div>
  <span>
    <div class="btn-group">
      <button class="btn dropdown-toggle" data-toggle="dropdown">⃞&nbsp;<span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><a href="?" class="select-all-btn"><input type="checkbox" value="">&nbsp;全部</a></li>
        <li class="divider"></li>

        <li><a href="?type=4" class="select-suc-btn"><input type="checkbox" value="">&nbsp;话费充值</a></li>
        <li><a href="?type=8" class="select-suc-btn"><input type="checkbox" value="">&nbsp;支付宝转账</a></li>
        <li><a href="?type=16" class="select-suc-btn"><input type="checkbox" value="">&nbsp;集分宝兑换</a></li>
        <li><a href="?type=32" class="select-suc-btn"><input type="checkbox" value="">&nbsp;Q币充值</a></li>
        <li class="divider"></li>
        <li><a href="?type=2" class="select-failed-btn"><input type="checkbox" value="">&nbsp;实物奖品</a></li>
        <li><a href="?type=1" class="select-failed-btn"><input type="checkbox" value="">&nbsp;其他虚拟奖品</a></li>
      </ul>
    </div>
    <form class="form-search" style="display:inline">
      <div class="input-append">
        <input type="text" name="title" class="span6 search-query">
        <button type="submit" class="btn">Search</button>
      </div>
    </form>
  </span>
  <span class="pull-right">
    <%= paginator_mini @prizes %>
  </span>
</div>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>奖品名称</th>
        <th>额度(仅虚拟支付类)</th>
        <th width="15%">奖品操作</th>
      </tr>
    </thead>
    <tbody>
      <% @prizes["data"].each_with_index do |prize, i| %>
      <tr>
        <td><a href="/admin/prizes/<%= prize['_id'] %>/edit" title="title"><%= prize["title"] %></a></td>
        <td><%= prize["amount"] %></td>
        <td>
          <div class="btn-group">
            <a class="btn" href="<%= admin_prizes_path %>/<%= prize["_id"] %>/edit" target="_blank"><i class="icon-edit"></i>编辑</a>
            <button class="btn dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="/admin/prizes/<%= prize["_id"] %>" title="Delete" data-id="<%= prize["_id"] %>"><i class="icon-remove"></i>删除</a></li>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


</div>