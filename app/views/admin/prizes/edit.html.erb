<% content_for :head do %>
  <%= javascript_include_tag "pages/admin/quality_questions/form-bundle" %>
<% end %>
<% content_for :sidenav do %>
  <li>
    <a href="/admin/quality_questions">
    <i class="icon-chevron-right"></i>
    质控题列表
    </a>
  </li>
  <li class="active">
    <a href="/admin/quality_questions/new">
      <i class="icon-chevron-right"></i>
      新建质控题
    </a>
  </li>
<% end %>
<form action="<%= admin_quality_question_path(params[:id]) %>"
      name="quality_question"
      enctype="multipart/form-data"
      method="post"
      id="quality_question_form"
      class="form-horizontal"
>
  <input value="put" type='hidden' name="_method">

  <legend></legend>

  <div class="control-group">
    <label class="control-label" >质控类型:</label>
    <div class="controls">
      <div class="btn-group">
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          选择类型
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropselect" id="type_select">
          <li><a href="#type-2">客观题</a></li>
          <li><a href="#type-4">匹配题</a></li>
        </ul>
        <input type="hidden" name="quality_control_type" id="quality_control_type" value="<%= @quality_question["quality_control_type"] || 1 %>">
      </div>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" >问题类型:</label>
    <div class="controls">
      <div class="btn-group">
        <button class="btn dropdown-toggle" data-toggle="dropdown">
          选择类型
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropselect" id="type_select">
          <li><a href="#qtype-1">选择题</a></li>
        </ul>
        <input type="hidden" name="question_type" id="question_type" value="<%= @quality_question["question_type"] || 1 %>">
      </div>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" >问题数量:</label>
    <div class="controls">
      <div class="input-prepend" id="tel_charge_select">
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            快捷设置
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu qnumber">
            <li><a href="#number-1">1</a></li>
            <li><a href="#number-2">2</a></li>
            <li><a href="#number-3">3</a></li>
            <li><a href="#number-5">4</a></li>
            <li><a href="#number-5">5</a></li>
          </ul>
          <input class="input-medium" type="text" name="question_number" id="tel_charge_amount" placeholder="额度" value="<%= @quality_question["tel_charge"] %>">
        </div>
      </div>  
    </div>  
  </div>
  <div class="pull-right">
  <%= link_to "<<返回列表", admin_quality_questions_path %>
  <button type="submit" class="btn btn-primary">确认无误</button>

  </div>
</form>
