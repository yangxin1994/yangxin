<%if @feedback.success %>
<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/feedbacks-bundle" %>
	<%= stylesheet_link_tag "pages/admin/feedbacks-bundle", :media => "all" %>
<% end %>
<!--  end of head-->

<div id="edit-tab">
	<div class="title">
		<h5>反馈管理: 查看/回复<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/feedbacks">返回反馈列表</a><h5>
	</div>

	<p>
		<label>(<span class="f-red"><%if @feedback.value["is_answer"] %>己回复<%else%>未回复<%end%></span>) 标题: </label>
		<span name="title" class="wrap-text"><%= @feedback.value["title"] %></span>
	</p>
	<p>
		<label>内容: </label>
		<span name="content" class="wrap-text"/><%= @feedback.value["content"] %></span>
	</p>
	<hr />
	<%unless @feedback.value["is_answer"] %>
		<p>
			<label style="vertical-align:top">回复内容</label>
			<textarea name="feedback_content" style="width: 100%;min-height: 100px;"></textarea> 
		</p>
		<p>
			<input class="blueBtn btn-edit-ok" type="button" value="回 复" />
		</p>
	<%else%>
		<p>
			<label>回复内容</label>
			<span name="feedback_content" class="wrap-text"><%= @feedback.value["reply_message"].to_s%></span> 
		</p>
	<%end%>			
</div> <!-- #tab2 结束 --> 
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @feedback.value %></p>
</div>
<%end%>	