<%if @feedbacks.success %>
<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/feedbacks-bundle" %>
	<%= stylesheet_link_tag "pages/admin/feedbacks-bundle", :media => "all" %>
<% end %>

<!-- put html code below -->
<div class="feedbacks"> 
<div id="list-tab">
	<div class="title">
		<h5>反馈管理<h5>
	</div>
	
	<div class="table">
		<div class="head">
			<h5 class="iFrames">
				列表
			</h5>
			<select class="selectReply">
				<option value="all">全部</option>
				<option value="yes">已回复</option>
				<option value="no" >未回复</option>  
			</select>
		</div>
		
		<table cellspacing="0" cellpadding="0" border="0" id="example" class="display">
			<thead>
				<tr>
					<th class="" rowspan="1" colspan="1" style="width: 10px;">
						<input class="check-all" type="checkbox" />
					</th>
					<th>反馈标题</th>
					<th>提交人</th>
					<th class="time">提交时间</th>
					<th>处理状态</th>
					<th rowspan="1" colspan="1" style="width: 60px;"></th>
				</tr>
			</thead>

			<tbody>
				<% @feedbacks.value["data"].to_a.each do |feedback|%>
					<tr id="<%= feedback['_id']%>">
						<td><input type="checkbox" /></td>
						<td>                           
							<a href="/admin/feedbacks/<%= feedback["_id"] %>" title="点击查看/回复"><%= feedback["title"] %></a></td>
						<td class="user_id" name="<%= feedback["question_user_id"] %>"><%= feedback["question_user_id"] %></td>
						<td class="time"><%= feedback["created_at"][0,16].gsub(/[T]/, ' ') %></td>
						<% if feedback["is_answer"] then%>
							<td class="orange">已回复</td>
						<% else %>
							<td class="red">未回复</td>
						<% end %>
						<td>
							<!-- Icons -->
							 <a href="/admin/feedbacks/<%= feedback["question_user_id"] %>" title="回复"><img src="../../assets/od-icon/pencil.png" alt="回复" /></a>
							 <a href="#" class="delete" title="删除"><img src="../../assets/od-icon/cross.png" alt="删除" /></a> 
						</td>
					</tr>
				<%- end %>
			</tbody>

			<tfoot>
				<tr>
					<td colspan="6">
						<div class="delete-selected-panel">
							<input type="button" class="blueBtn delete-selected" value="批量删除"/>
						</div>

						<%= paginator_tag @feedbacks.value %>
					</td>
				</tr>
			</tfoot>			
		</table>
		
	</div>
</div>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @feedbacks.value %></p>
</div>
<%end%>	