<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/advertisements-bundle" %>
	<%= stylesheet_link_tag "pages/admin/advertisements-bundle", :media => "all" %>
<% end %>

<div id="edit-tab">
	<div class="title">
		<h5>广告管理: 创建<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/advertisements">返回广告列表</a><h5>
	</div>

	<form action="/admin/advertisements" name="advertisements" enctype="multipart/form-data" method="post">
		<input name="_method" id="_method" type="hidden" value="post" />				
		<fieldset>
			<p>
				<label>广告标题</label>
				<input class="wrap-text" type="text" name="title"/>
			</p>
			<p>
				<label>链接地址</label>
				<input type="text" name="linked"/> 
				<span class="input-notification error dn png_bg">请输入正确的邮箱地址！</span> 
			</p>
			<p>
				<label>上传图片</label>
				<input type="file" name="image_location" class="fileToUpload" style="margin-top: 10px;">
			</p>
			<p>
				<label>是否显示</label>
				<input type="checkbox" name="activate" />
			</p>
			<p>
				<input class="blueBtn btn-new-ok" type="submit" value="确 定" />
			</p>					
		</fieldset>
						
	</form>	

	<hr/>
</div>
