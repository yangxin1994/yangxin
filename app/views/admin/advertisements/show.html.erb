<%if @advertisement.success %>

<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/admin/advertisements-bundle" %>
	<%= stylesheet_link_tag "pages/admin/advertisements-bundle", :media => "all" %>
<% end %>

<div id="edit-tab">
	<div class="title">
		<h5>广告管理: 查看<h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/advertisements">返回广告列表</a><h5>
		<h5 style="color: white; float: right; display: block;" ><a style="color: white; float: right; display: block;"  href="/admin/advertisements/new">创建广告</a><h5>
	</div>

	<% if flash[:notice] %>
		<div class="nNote nInformation hideit">
			<p><strong>信息: </strong><%= flash[:notice] %></p>
		</div>
	<% end%>

	<form action="/admin/advertisements/<%= @advertisement.value['_id'] %>" name="advertisements" enctype="multipart/form-data" method="post">
		<input name="_method" id="_method" type="hidden" value="put" />				
		<fieldset>
			<p>
				<label>广告标题</label>
				<input class="wrap-text" type="text" name="title" value="<%= @advertisement.value["title"] %>"/>
			</p>
			<p>
				<label>链接地址</label>
				<input type="text" name="linked" value="<%= @advertisement.value["linked"] %>"/> 
				<span class="input-notification error dn png_bg">请输入正确的邮箱地址！</span> 
			</p>
			<p>
				<label style="vertical-align:top">更改图片</label>
				<img style="max-width: 600px; max-height: 200px;" class="uploadImg" src="<%= @advertisement.value["image_location"] %>"/>
				<input type="file" name="image_location" class="fileToUpload" style="margin-top: 10px;">
			</p>
			<p>
				<label>是否显示</label>
				<input type="checkbox" <%if @advertisement.value["activate"]==true%>checked value="true"<%end%> name="activate" />
			</p>
			<p>
				<input class="blueBtn btn-edit-ok" type="submit" value="确 定" />
			</p>					
		</fieldset>
						
	</form>	

	<hr/>
</div>
<%else%>
<div class="nNote nFailure hideit">
	<p><strong>错误: </strong>哇! 数据加载错误!</p>
	<p><strong>代号: </strong><%= @advertisement.value %></p>
</div>
<%end%>	