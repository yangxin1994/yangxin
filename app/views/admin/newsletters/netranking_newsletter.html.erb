<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-list flowy-admin-sidenav">
    <li>
      <a href="/admin/newsletters">
      <i class="icon-chevron-right"></i>
      电子杂志列表
      </a>
    </li>
    <li>
      <a href="/admin/newsletters/new">
        <i class="icon-chevron-right"></i>
        新建电子杂志
      </a>
    </li>
    <li>
      <a href="/admin/subscribers">
        <i class="icon-chevron-right"></i>
        订阅管理
      </a>
    </li>
    <li>
      <a href="/admin/newsletters/sms">
      <i class="icon-chevron-right"></i>
      群发短信
