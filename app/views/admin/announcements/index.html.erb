<!-- content for head -->
<% content_for :head do %>
	<script type="text/javascript">
		jQuery(function($) {
			window.announcements = <%= raw (@announcements['data'] || []).to_json %>;
			window.announcements_count = <%= raw (@announcements['total_page'].to_i).to_json %>;
		});
	</script>	

	<%= javascript_include_tag "pages/admin/announcements/index-bundle" %>
	<%= stylesheet_link_tag "pages/admin/announcements-bundle", :media => "all" %>  
<% end %>
<% content_for :sidenav do %>
  <li class="active">
    <a href="/admin/announcements">
    <i class="icon-chevron-right"></i>
    公告列表
    </a>
  </li>
  <li>
    <a href="/admin/announcements/new">
      <i class="icon-chevron-right"></i>
      新建公告
    </a>
  </li>
<% end %>

<div>
  <span>
    <div class="btn-group">
      <button class="btn dropdown-toggle" data-toggle="dropdown">⃞&nbsp;<span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><a href="?" class="select-all-btn"><input type="checkbox" value="">&nbsp;全部</a></li>
        <li class="divider"></li>
      </ul>
    </div>
    <form class="form-search" style="display:inline">
      <div class="input-append">
        <input type="text" name="title" class="span6 search-query">
        <button type="submit" class="btn">Search</button>
      </div>
    </form>
  </span>
  <span class="pull-right">
    <%= paginator_mini @announcements %>
  </span>
</div>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>公告标题</th>
        <th>发布人</th>
        <th>创建时间</th>
        <th width="15%">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements["data"].each_with_index do |announcement, i| %>
      <tr>
	      <td>                           
	      	<a href="/admin/announcements/<%= announcement["_id"] %>" title="点击查看/回复"><%= announcement["title"] %></a></td>
	      <td><%= announcement["user_email"] %></td>
	      <td><%= announcement["created_at"].strftime("%F %T") %></td>
	      <td>
          <a class="btn delete" href="javascript:void(0);" data-aid="<%= announcement["_id"] %>" target="_blank"><i class="icon-remove"></i>删除</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


</div>