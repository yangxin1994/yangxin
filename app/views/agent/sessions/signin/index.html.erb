<div class="">
  <%= form_for "agent", :url=> "/agent/signin", :html => { :class => "form-horizontal"} do |f| %>

    <div class="control-group">
      <label class="control-label">邮箱:</label>
      <div class="controls">
        <%= f.text_field :email, :class => "input-large" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">密码:</label>
      <div class="controls">
        <%= f.password_field :password, :class => "input-large"%>
      </div>
    </div>    
    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定",:class => "btn" %>
      </div>
    </div>   
    
  <% end %>
</div>