<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/account/password_find_quillme-bundle" %>
	<%= stylesheet_link_tag "pages/account/signup_quillme-bundle", :media => "all" %>
<% end %>

<% content_for :left do %>
<div class="content-account-box redBorder">
	<h3 class="content-left-title whiteTxt f14 b redBg">找回密码</h3>
	<div class="w896 fix">
		<div class="reg-finish">
			<p class="f14 g3">系统将向您的注册邮箱发送重置密码邮件：</p>
			<p class='mt10'>
				<input id='email_ipt' type='text' param='e' placeholder='请输入注册邮箱' />
				<button id='find_btn' class="homepage-btn red-btn">重置密码</button>
			</p>
			<dl class="activate-lose mt20"><dt class="g6 mt5" id='error'></dt></dl>
	    </div>
	</div>
</div>
<% end %>
