<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/account/password_reset_quillme-bundle" %>
	<%= stylesheet_link_tag "pages/account/signup_quillme-bundle", :media => "all" %>
<% end %>

<% content_for :left do %>
<div class="content-account-box redBorder">
	<h3 class="content-left-title whiteTxt f14 b redBg">修改密码</h3>
	<div class="w896 fix">
		<div class="reg-finish">
			<p class="f14 g3">请输入两次新密码：</p>
			<p class='mt10'><input id='password_ipt' type='password' placeholder='请输入新密码' /></p>
			<p class='mt10'><input id='password_confirmation_ipt' type='password' placeholder='重复输入密码' /></p>
			<p class='mt10'><button id='ok_btn' class="homepage-btn red-btn">修改密码</button></p>
			<dl class="activate-lose mt20"><dt class="g6 mt5" id='error'></dt></dl>
	    </div>
	</div>
</div>
<% end %>
