<!-- content for head -->
<% content_for :head do %>
	<%= javascript_include_tag "pages/account/signup_quillme-bundle" %>
	<%= stylesheet_link_tag "pages/account/signup_quillme-bundle", :media => "all" %>
<% end %>

<% content_for :left do %>
<div class="content-account-box redBorder" style='height: 350px;'>
	<h3 class="content-left-title whiteTxt f14 b redBg">注册</h3>
	<div class="w896 fix">
		<div class="login-left login-panel l">
			<h2 class="b redTxt fix f14 mb10">
				<span class="l">我已经有账号了,</span>
				<span class="login-link g3 ml5"><a id='login_href' href='<%=signin_path %>' param='e tpui i'>直接登录</a></span>
			</h2>
			<div class="f14 dib tr">
				<p>
					<label for="reg_username">注册邮箱：</label>
					<input type="text" name="username" id="reg_username" placeholder='请输入注册邮箱' param='e' /></p>
				<p class="mt15">
					<label for="reg_password">登录密码：</label>
					<input type="password" name="passowrd" id="reg_password" placeholder='请输入登录密码'></p>
				<p class="mt15">
					<label for="reg_password_repeat">重复密码：</label>
					<input type="password" name="passowrd" id="reg_password_repeat" placeholder='重复输入密码'></p>
				<p id='error' class="l" style='clear:both;display:block;'></p>
				<p style='padding-top: 5px; clear:both;'>
					<div style='float: left'>
						<input id='i_green_protocol' type='checkbox' checked />
						<label for="i_green_protocol">同意</label>
						<a href="javascript:void(0);" id='open_agreement'>注册协议</a>
					</div>
					<button id='reg_btn' class="homepage-btn red-btn">注 册</button>
				</p>
			</div>
		</div>
		<div class="login-right l">
			<% if params[:tpui].blank? %>
			<h2 class="b redTxt fix f14">使用其他账号登录</h2>
			<%= render "partials/social_connect_quillme" %>
			<% else %>
			<p style='font-size: 13px; line-height: 1.5em; margin-top: 10px;'>注册完成后，系统会将您刚才所授权的第三方账户和您在<%= corp_name %>的账户进行关联，账户关联后您可以：</p>
			<ul style='font-size: 13px; line-height: 2em; list-style:square; margin-left: 20px; margin-top: 10px; color: #666;'>
				<li>通过登录界面的“其他账户登录”按钮快速登录系统；</li>
				<li>快速邀请好友加入<%= corp_name %>社区或填写问卷，获取奖励；</li>
				<li>将您的动态实时更新到社交网络；</li>
				<li>⋯⋯</li>
			</ul>
			<% end %>
		</div>
	</div>
</div>
<div id='agreement' style='display:none;'>
	<h1 style='font-size: 14px; padding: 20px; text-align: center;'>《 <%= corp_name %>服务使用协议 》</h1>
	<iframe style='width: 100%; height: 500px;' src="/agreement.html"></iframe>
</div>
<% end %>
