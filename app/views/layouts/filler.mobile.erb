<% content_for :app_head do %>
	<%= javascript_include_tag "layouts/filler-mobile" %>
	<%= stylesheet_link_tag    "layouts/filler-mobile" %>

	<% if !@survey.nil?%>
	<script type="text/javascript">
		window.survey_id = '<%= @survey["_id"] %>';
		window.is_preview = <%= @is_preview.blank? ? 'false' : @is_preview %>;
	</script>
	<% end %>

	<%= yield :head %>

<% end %>

<% content_for :app_content do %>

<%= yield %>


<% if @spreadable %>
<div id='spread'>
	<div id='spread_inner'>
		<i class="q-divide"></i>
		<input type="text" name="share-link" class="share-link" value="<%= @spread_url %>" />
		<button class="copy-link">复制链接</button>
		<p class="describe-txt">每成功邀请一位好友答题可获<em><%= @reward['spread_point'] %></em>积分奖励。</p>

			<a href='javascript:void(0);' class='share-icon icon-SinaWeibo' title='分享至 新浪微博'></a>
			<a href='javascript:void(0);' class='share-icon icon-TencentWeibo' title='分享至 腾讯微博'></a>
			<a href='javascript:void(0);' class='share-icon icon-Renren' title='分享至 人人网'></a>
			<a href='javascript:void(0);' class='share-icon icon-Douban' title='分享至 豆瓣'></a>
			<a href='javascript:void(0);' class='share-icon icon-QQSpace' title='分享至 QQ 空间'></a>
			<a href='javascript:void(0);' class='share-icon icon-Kaixin001' title='分享至 开心网'></a>
			<a href='javascript:void(0);' class='share-icon icon-Diandian' title='分享至 点点网'></a>
			<a href='javascript:void(0);' class='share-icon icon-Gmail' title='分享至 Gmail'></a>
			<a href='javascript:void(0);' class='share-icon icon-Fetion' title='分享至 飞信'></a>
	</div>
</div>
<% end %>


<% end %>

<%= render :template => 'layouts/app' %>
