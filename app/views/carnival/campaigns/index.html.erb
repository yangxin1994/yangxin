        <% @reward_list.each do |reward|%>
          <tr>
            <% reward.mobile[3..6] = '****'%>
            <td><%= reward.mobile %></td>
            <td><%= reward.carnival_prize.name %>(1个)</td>
            <td><%= reward.created_at.strftime("%F")%></td>
          </tr>        
        <% end %>
        <tr>
            <td>187****6869</td>
            <td>红米note(1部)</td>
            <td>2014-07-18</td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
