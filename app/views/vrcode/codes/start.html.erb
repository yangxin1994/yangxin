<% content_for :app_head do %>
  <%= javascript_include_tag "pages/vrcode/codes-bundle" %>
  <%= stylesheet_link_tag "pages/vrcode/codes-bundle", :media => "all" %>
<% end %>
<% content_for :app_content do %>
  <div class="header">
    <div class="header-content">

      <p>已获得<b id="grades"><%= current_user.sina_verify_info['success'] || 0%></b>积分</p>
      <ul>
        <li class="pd">
          <i class="icon-exclamation-sign"></i>
          <div>正在判断<b id="judging"><%= current_user.verify_judge_count  || 0 %></b>个</div>
        </li>
        <li class="zq">
          <i class="icon-ok-sign"></i>

          <div>输入正确<b id="correct"><%= current_user.sina_verify_info['success']  || 0%></b>个</div>
        </li>
        <li class="cw">
          <i class="icon-remove-sign"></i>
          <div>输入错误<b id="wrong"><%= current_user.sina_verify_info['faild']  || 0%></b>个</div>
        </li>
      </ul>
    </div>
  </div>
  <div class="vrcode">
  
     <% if @img.present? %>
        <%=image_tag @img, :alt => "bg" %>
        <form action="" id="submitform" method="post">
       <input type="text"  id="code" placeholder="输入验证码，回车发送">
        <input type="hidden" id="image_id" value="<%= @cid %>">
        <input type="hidden" id="remote_ip" value="<%= @ip %>">
       <a href="javascript:submitvrcode();" class="submit">提交 ( Enter )</a>
       <span>已提交<b id="total"><%= current_user.sina_verify_info['commit'] || 0 %></b>个</span>
       </form>     
     <% else %>
      <div style='height:24px;line-height:24px;font-size:24px;padding:15px;' class='no-more'>目前没有多余的验证码,可以过段时间再来</div>
     <% end %>
  </div>
<% end %>