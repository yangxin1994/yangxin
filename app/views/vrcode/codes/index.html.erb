<% content_for :app_head do %>
  <%= javascript_include_tag "pages/vrcode/codes-bundle" %>
  <%= stylesheet_link_tag "pages/vrcode/codes-bundle", :media => "all" %>
<% end %>
<% content_for :app_content do %>
  <div class="cover">
    <%=image_tag "vrcode/bg.jpg", :alt => "bg" %>
  </div>
  <div class="opa"></div>
  <div class="content">
    <h1>游戏说明</h1>
    <div class="txt">
      <p>1. 点击“开始输入”按钮开始游戏</p>
      <p>2. 每输入正确一次即可获得<b>1</b>积分，输入错误不计分</p>
    </div>
    <a href="/vrcode/codes/start" class="start">开始输入</a>
  </div>
<% end %>