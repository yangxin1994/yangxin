#!/bin/bash  
#

array=(faq public_notice feedback advertisement system_user ip_info user)
echo "################ Start Test #############"
echo " "
for x in "${array[@]}"; do 
  ruby -Itest test/unit/"$x"_test.rb
  ruby -Itest test/functional/"$x"s_controller_test.rb 
  ruby -Itest test/functional/admin/"$x"s_controller_test.rb 
done
echo " "
echo "############### END #########################"
